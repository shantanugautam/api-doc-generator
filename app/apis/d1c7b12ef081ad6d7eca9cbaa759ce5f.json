{
  "name": "Users/Wallets/Cards/Funds/Transfers",
  "package": [
    "v1"
  ],
  "version": [
    "1.0.0"
  ],
  "description": "User's fund transfer",
  "methods": [
    {
      "name": "get",
      "requests": [
        {
          "name": "id",
          "type": "string",
          "optional": true,
          "length": {
            "min": 0,
            "max": 0
          },
          "description": "Get details of a transfer"
        },
        {
          "name": "status",
          "type": "string",
          "optional": true,
          "length": {
            "min": 0,
            "max": 0
          },
          "description": "Filter according to the current state of the transfer\n                                  (active, pending, cancelled, failed or error)"
        },
        {
          "name": "type",
          "type": "string",
          "optional": true,
          "length": {
            "min": 0,
            "max": 0
          },
          "description": "Comma delimited sorting of the result\n                                  according to amount, date.added and date.expiry.\n                                  ex. sort=-date.added,+amount"
        },
        {
          "name": "type",
          "type": "string",
          "optional": true,
          "length": {
            "min": 0,
            "max": 0
          },
          "description": "Filter according to the type of transfer medium\n                                  (card, sms or email)"
        }
      ],
      "response": {
        "id": {
          "name": "id",
          "type": "string",
          "description": "Transfer's id"
        },
        "recipient": {
          "name": "recipient",
          "type": "array",
          "description": "Recepient",
          ".type": {
            "name": "type",
            "type": "string",
            "description": "Recepient Card"
          },
          ".id": {
            "name": "id",
            "type": "string",
            "description": "Recepient Card's Id"
          }
        },
        "status": {
          "name": "status",
          "type": "string",
          "description": "Status of the transction"
        },
        "amount": {
          "name": "amount",
          "type": "float",
          "description": "Amount tranferred"
        },
        "current": {
          "name": "current",
          "type": "string",
          "description": "Currency of transfer"
        },
        "fee": {
          "name": "fee",
          "type": "array",
          "description": "Amount and currency of transfer fee"
        },
        "date": {
          "name": "date",
          "type": "array",
          "description": "Trasfer dates",
          ".created": {
            "name": "created",
            "type": "date",
            "description": "Date when transaction was created"
          },
          ".expiry": {
            "name": "expiry",
            "type": "date",
            "description": "Transaction's expiration date"
          }
        }
      },
      "description": "Returns money transfer's transaction"
    },
    {
      "name": "post",
      "requests": [
        {
          "name": "user",
          "type": "string",
          "optional": false,
          "length": {
            "min": 1,
            "max": 0
          },
          "description": "User identifier(email, mobile, or hash_id)"
        },
        {
          "name": "amount",
          "type": "int",
          "optional": false,
          "length": {
            "min": 1,
            "max": 0
          },
          "description": "Transfer amount"
        },
        {
          "name": "message",
          "type": "string",
          "optional": true,
          "length": {
            "min": 0,
            "max": 0
          },
          "description": "Message"
        }
      ],
      "response": {
        "id": {
          "name": "id",
          "type": "string",
          "description": "Transfer's id"
        },
        "recipient": {
          "name": "recipient",
          "type": "array",
          "description": "Recepient",
          ".type": {
            "name": "type",
            "type": "string",
            "description": "Recepient Card"
          },
          ".id": {
            "name": "id",
            "type": "string",
            "description": "Recepient Card's Id"
          }
        },
        "status": {
          "name": "status",
          "type": "string",
          "description": "Status of the transction"
        },
        "amount": {
          "name": "amount",
          "type": "float",
          "description": "Amount tranferred"
        },
        "current": {
          "name": "current",
          "type": "string",
          "description": "Currency of transfer"
        },
        "fee": {
          "name": "fee",
          "type": "array",
          "description": "Amount and currency of transfer fee"
        },
        "date": {
          "name": "date",
          "type": "array",
          "description": "Trasfer dates",
          ".created": {
            "name": "created",
            "type": "date",
            "description": "Date when transaction was created"
          },
          ".expiry": {
            "name": "expiry",
            "type": "date",
            "description": "Transaction's expiration date"
          }
        }
      },
      "description": "Creates and Returns money transfer's transaction infomation"
    },
    {
      "name": "put",
      "response": {
        "id": {
          "name": "id",
          "type": "string",
          "description": "Transfer's id"
        },
        "recipient": {
          "name": "recipient",
          "type": "array",
          "description": "Recepient",
          ".type": {
            "name": "type",
            "type": "string",
            "description": "Recepient Card"
          },
          ".id": {
            "name": "id",
            "type": "string",
            "description": "Recepient Card's Id"
          }
        },
        "status": {
          "name": "status",
          "type": "string",
          "description": "Status of the transction"
        },
        "amount": {
          "name": "amount",
          "type": "float",
          "description": "Amount tranferred"
        },
        "current": {
          "name": "current",
          "type": "string",
          "description": "Currency of transfer"
        },
        "fee": {
          "name": "fee",
          "type": "array",
          "description": "Amount and currency of transfer fee"
        },
        "date": {
          "name": "date",
          "type": "array",
          "description": "Trasfer dates",
          ".created": {
            "name": "created",
            "type": "date",
            "description": "Date when transaction was created"
          },
          ".expiry": {
            "name": "expiry",
            "type": "date",
            "description": "Transaction's expiration date"
          }
        }
      },
      "description": "Acknowledges the transfer and starts the transfering of funds."
    },
    {
      "name": "delete",
      "response": {
        "id": {
          "name": "id",
          "type": "string",
          "description": "Transfer's id"
        },
        "recipient": {
          "name": "recipient",
          "type": "array",
          "description": "Recepient",
          ".type": {
            "name": "type",
            "type": "string",
            "description": "Recepient Card"
          },
          ".id": {
            "name": "id",
            "type": "string",
            "description": "Recepient Card's Id"
          }
        },
        "status": {
          "name": "status",
          "type": "string",
          "description": "Status of the transction"
        },
        "amount": {
          "name": "amount",
          "type": "float",
          "description": "Amount tranferred"
        },
        "current": {
          "name": "current",
          "type": "string",
          "description": "Currency of transfer"
        },
        "fee": {
          "name": "fee",
          "type": "array",
          "description": "Amount and currency of transfer fee"
        },
        "date": {
          "name": "date",
          "type": "array",
          "description": "Trasfer dates",
          ".created": {
            "name": "created",
            "type": "date",
            "description": "Date when transaction was created"
          },
          ".expiry": {
            "name": "expiry",
            "type": "date",
            "description": "Transaction's expiration date"
          }
        }
      },
      "description": "Cancel money transfer"
    }
  ]
}
